<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="UI.UploadTimetable"
            prefHeight="400.0" prefWidth="600.0">


    <GridPane fx:id="root" alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1"
              xmlns="http://javafx.com/javafx/8.0.121">
        <padding>
            <Insets bottom="40" left="40" right="40" top="40"/>
        </padding>
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100" prefWidth="100">
            </ColumnConstraints>
            <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200" prefWidth="200">
            </ColumnConstraints>
        </columnConstraints>

        <Label id="header-text" text="Upload your Time table " GridPane.columnIndex="1" GridPane.columnSpan="2"
               GridPane.halignment="CENTER" GridPane.rowSpan="1">
            <font>
                <Font name="Arial" size="16"/>
            </font>
            <GridPane.margin>
                <Insets bottom="20" left="0" right="0" top="20"/>
            </GridPane.margin>
        </Label>
        <Label text="File : " GridPane.columnIndex="0" GridPane.rowIndex="2">
        </Label>
        <!-- Add Email Text Field -->
        <TextField fx:id="fileinput" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Button contentDisplay="RIGHT" defaultButton="true" mnemonicParsing="false" onAction="#handlecheckAction"
                prefHeight="43.0" prefWidth="138.0" text="Choose" GridPane.columnIndex="3"
                GridPane.rowIndex="2"/>

        <Button contentDisplay="RIGHT" defaultButton="true" mnemonicParsing="false" onAction="#handleUploadAction"
                prefHeight="43.0" prefWidth="138.0" text="Upload" GridPane.columnIndex="3"
                GridPane.rowIndex="3"/>
    </GridPane>


</AnchorPane>
