<AnchorPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.UploadTimetable">


    <GridPane fx:id="root" alignment="center" hgap="10" prefWidth="750.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
        <padding>
            <Insets bottom="40" left="40" right="40" top="40" />
        </padding>
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100.0" prefWidth="100.0">
            </ColumnConstraints>
            <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200.0" prefWidth="200.0">
            </ColumnConstraints>
            <ColumnConstraints />
         <ColumnConstraints />

        </columnConstraints>

        <Label id="header-text" prefHeight="20.0" prefWidth="236.0" text="Upload your Time table " GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowSpan="1">
            <font>
                <Font name="Arial" size="16" />
            </font>
            <GridPane.margin>
                <Insets bottom="20" left="0" right="0" top="20" />
            </GridPane.margin>
        </Label>
        <Label text="File : " GridPane.columnIndex="0" GridPane.rowIndex="2">
        </Label>
        <!-- Add Email Text Field -->
        <TextField fx:id="fileinput" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button contentDisplay="RIGHT" defaultButton="true" mnemonicParsing="false" onAction="#handlecheckAction" prefHeight="43.0" prefWidth="138.0" text="Choose" GridPane.columnIndex="3" GridPane.rowIndex="2" />


        <Button contentDisplay="RIGHT" defaultButton="true" mnemonicParsing="false" onAction="#handleUploadAction" prefHeight="43.0" prefWidth="138.0" text="Upload" GridPane.columnIndex="3" GridPane.rowIndex="4" />
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
    </GridPane>


</AnchorPane>
