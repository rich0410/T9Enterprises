<?xml version="1.0" encoding="UTF-8"?>
<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="UI.AppointmentController">

    <center>
        <VBox prefHeight="600.0" prefWidth="717.0" styleClass="content">
            <children>
                <Label styleClass="heading" text="Your TimeTable"/>

                <AnchorPane id="AnchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                            minWidth="-Infinity" prefHeight="150" prefWidth="500" xmlns:fx="http://javafx.com/fxml">
                    <children>
                        <TableView fx:id="tableView1" layoutX="-4.0" prefHeight="200.0" prefWidth="641.0">
                            <columns>
                                <TableColumn fx:id="CourseCodeID" prefWidth="117.0" text="CourseCodeID"/>
                                <TableColumn fx:id="LabLecture" prefWidth="134.0" text="LabLecture"/>
                                <TableColumn fx:id="Title" prefWidth="165.0" text="Title"/>
                                <TableColumn fx:id="Room" prefWidth="223.0" text="Room Number"/>
                            </columns>
                        </TableView>
                    </children>
                </AnchorPane>

                <Label styleClass="heading" text="Your TimeSlots"/>
                <AnchorPane id="AnchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                            minWidth="-Infinity" prefHeight="150" prefWidth="500" xmlns:fx="http://javafx.com/fxml">
                    <children>
                        <TableView fx:id="tableView" layoutX="-4.0" prefHeight="200.0" prefWidth="641.0">
                            <columns>
                                <TableColumn fx:id="StartTime" prefWidth="117.0" text="Start Time"/>
                                <TableColumn fx:id="EndTime" prefWidth="134.0" text="End Time"/>
                                <TableColumn fx:id="Duration" prefWidth="165.0" text="Duration"/>
                                <TableColumn fx:id="RoomNumber" prefWidth="223.0" text="Room Number"/>
                            </columns>
                        </TableView>
                    </children>
                </AnchorPane>


            </children>
            <Button contentDisplay="RIGHT" defaultButton="true" mnemonicParsing="false"
                    onAction="#handleDeleteAction" prefHeight="43.0" prefWidth="101.0" text="Delete"/>
        </VBox>
    </center>
    <bottom>
        <HBox styleClass="footer">
            <children>
                <Label text="Copyright T9-Enterprises"/>
            </children>
        </HBox>
    </bottom>

    <stylesheets>
        <URL value="@toolbar-demo.css"/>
    </stylesheets>
</BorderPane>
